/* 全局样式 */
page {
  background-color: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 通用样式 */
.container {
  padding: 40rpx;
}

.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border: none;
  border-radius: 50rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-secondary {
  background: #FFFFFF;
  border: 2rpx solid #E1E8ED;
  border-radius: 50rpx;
  color: #4A90E2;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 68rpx;
}

.text-primary {
  color: #4A90E2;
}

.text-success {
  color: #28A745;
}

.text-danger {
  color: #DC3545;
}

.text-muted {
  color: #7A7E83;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
}

/* 间距工具类 */
.mt-1 { margin-top: 16rpx; }
.mt-2 { margin-top: 32rpx; }
.mb-1 { margin-bottom: 16rpx; }
.mb-2 { margin-bottom: 32rpx; }
.p-1 { padding: 16rpx; }
.p-2 { padding: 32rpx; }