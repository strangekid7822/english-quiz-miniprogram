/* 错题复习页样式 */
.error-review-container {
  padding: 40rpx;
  background: #F8F9FA;
  min-height: 100vh;
}

.loading, .empty-state {
  text-align: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #7A7E83;
}

.progress {
  text-align: center;
  font-size: 28rpx;
  color: #4A90E2;
  margin-bottom: 32rpx;
  font-weight: 600;
}

.question-card {
  margin-bottom: 32rpx;
}
.option {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #E1E8ED;
  border-radius: 12rpx;
}

.option.correct {
  border-color: #28A745;
  background: rgba(40, 167, 69, 0.1);
}

.option-label {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #F8F9FA;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  margin-right: 20rpx;
  color: #4A90E2;
}

.option.correct .option-label {
  background: #28A745;
  color: #FFFFFF;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #1A1A1A;
}

.explanation {
  background: #F8F9FA;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
}

.explanation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 12rpx;
}

.explanation-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.actions {
  display: flex;
  gap: 24rpx;
  margin: 32rpx 0;
}

.actions button {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}

.practice-section {
  margin-top: 40rpx;
}

.practice-section button {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}