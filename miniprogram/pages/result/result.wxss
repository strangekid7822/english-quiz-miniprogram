/* 结果页样式 */
.result-container {
  padding: 40rpx;
  min-height: 100vh;
  background: #F8F9FA;
}

.score-section {
  text-align: center;
  margin-bottom: 32rpx;
  position: relative;
}

.score-badge {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.score-number {
  font-size: 120rpx;
  font-weight: 700;
  color: #4A90E2;
  line-height: 1;
}

.score-label {
  font-size: 32rpx;
  color: #7A7E83;
  margin-bottom: 16rpx;
}

.accuracy-text {
  font-size: 28rpx;
  color: #28A745;
  font-weight: 600;
}

.stats-section {
  margin-bottom: 40rpx;
}
.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7A7E83;
}

.actions-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.actions-section button {
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}