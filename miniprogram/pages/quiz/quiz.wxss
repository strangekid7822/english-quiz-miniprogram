/* 答题页样式 */
.quiz-container {
  min-height: 100vh;
  background: #F8F9FA;
}

.loading-section {
  text-align: center;
  padding: 200rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #7A7E83;
}

.quiz-content {
  padding: 40rpx;
}

.progress-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #E1E8ED;
  border-radius: 4rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2, #357ABD);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #7A7E83;
  white-space: nowrap;
}
.question-card {
  margin-bottom: 32rpx;
}

.question-number {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.question-content {
  font-size: 32rpx;
  color: #1A1A1A;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #E1E8ED;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.option-item.selected {
  border-color: #4A90E2;
  background: rgba(74, 144, 226, 0.05);
}

.option-label {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #F8F9FA;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  margin-right: 24rpx;
  color: #4A90E2;
}
.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #1A1A1A;
}

.result-section {
  text-align: center;
  margin-bottom: 32rpx;
}

.result-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
}

.result-icon.correct {
  color: #28A745;
}

.result-icon.incorrect {
  color: #DC3545;
}

.result-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.explanation {
  text-align: left;
  background: #F8F9FA;
  padding: 24rpx;
  border-radius: 12rpx;
}

.explanation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 12rpx;
}

.explanation-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.action-buttons button {
  flex: 1;
}