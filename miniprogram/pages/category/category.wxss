/* 分类选择页样式 */
.category-container {
  padding: 40rpx;
  background: #F8F9FA;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #7A7E83;
}

.categories-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.category-card {
  text-align: center;
  padding: 48rpx 24rpx;
  transition: all 0.3s ease;
}

.category-card:active {
  transform: scale(0.95);
}

.category-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.category-desc {
  font-size: 22rpx;
  color: #7A7E83;
  line-height: 1.4;
}