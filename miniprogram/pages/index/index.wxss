/* 首页样式 */
.user-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.user-stats {
  font-size: 24rpx;
}

.stats-grid {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  flex: 1;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7A7E83;
}

.practice-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option-card {
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.option-card:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.option-icon {
  font-size: 64rpx;
  margin-right: 32rpx;
}

.option-content {
  flex: 1;
}

.option-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #7A7E83;
}